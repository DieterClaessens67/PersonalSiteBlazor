<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">@name</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>        
    </div>
    <img src="Images/ProfilePicture.jpg" alt="Profile Picture" class="profile-picture" />
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-person" aria-hidden="true"></span> About
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="languages">
                <span class="oi oi-comment-square" aria-hidden="true"></span> Languages & Skills
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="portfolio">
                <span class="oi oi-camera-slr" aria-hidden="true"></span> Portfolio
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="testimonies">
                <span class="oi oi-thumb-up" aria-hidden="true"></span> Testimonies
            </NavLink>
        </div>
        <div class="navSocials">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="https://www.facebook.com/ClaessensInformatica">
                    <span><Icon Name="IconName.Facebook" Size="IconSize.x4" Color="IconColor.Light" /></span>
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink id="linkedInbtn" class="nav-link" href="https://www.linkedin.com/in/dieter-claessens-70283919b/">
                    <span><Icon Name="IconName.Linkedin" Size="IconSize.x4" Color="IconColor.Light" /></span>
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink id="mailbtn" class="nav-link" href="mailto:dieterclaessens3@hotmail.com">
                    <span><Icon Name="IconName.Mailbox" Size="IconSize.x4" Color="IconColor.Light" /></span>
                </NavLink>
            </div>
        </div>       
    </nav>
</div>

@code {
    private string name = "Software Solutions";
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
